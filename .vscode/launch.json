{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run regression.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/regression.py",
            "console": "integratedTerminal",
            "args": [
                "${input:csvPath}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "csvPath",
            "type": "promptString",
            "description": "Nhập đường dẫn tới tệp CSV (ví dụ: C:/Users/ban/Documents/dataset.csv)",
            "default": ""
        }
    ]
}
